@model Faxai.Models.ProductModels.ProductViewModel

<h2>Redaguoti Prekę</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Pavadinimas"></label>
        <input asp-for="Pavadinimas" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Kaina"></label>
        <input asp-for="Kaina" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Kiekis_Sandelyje"></label>
        <input asp-for="Kiekis_Sandelyje" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Aprasymas"></label>
        <textarea asp-for="Aprasymas" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Zemiausia_Kaina_Per_10d">Esama mažiausia kaina:</label>
        <div>
            <input asp-for="Zemiausia_Kaina_Per_10d" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Kategorija">Kategorija:</label>
        <div>
            <input asp-for="Kategorija" class="form-control" readonly />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Atnaujinti</button>
</form>

<a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="HomePage">Atgal</a>