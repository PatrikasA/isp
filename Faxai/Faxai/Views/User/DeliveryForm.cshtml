@model Faxai.Models.UserModels.DeliveryInfoModel

@{
    ViewData["Title"] = Model.ID == 0 ? "Add New Delivery Instruction" : "Edit Delivery Instruction";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("SubmitDeliveryInfo", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Enter Address" })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CommentForCourier)
        @Html.TextAreaFor(m => m.CommentForCourier, new { @class = "form-control", placeholder = "Comment for Courier" })
        @Html.ValidationMessageFor(m => m.CommentForCourier, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">
        @if (Model.ID == 0)
        {
            @:Add Instruction
        }
        else
        {
            @:Update Instruction
        }
    </button>
}

<a href="@Url.Action("DeliveryInfo", "User")" class="btn btn-secondary">Back to List</a>
