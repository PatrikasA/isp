@model List<Faxai.Models.UserModels.DeliveryInfoModel>

@{
    ViewData["Title"] = "Delivery Information";
}

<h2>Siuntimo informacija</h2>

<a href="@Url.Action("DeliveryForm", "User")" class="btn btn-primary">Pridėti siuntimo adresą</a>

@foreach (var instruction in Model)
{
    <div class="delivery-instruction">
        <p><strong>Adresas:</strong> @instruction.Address</p>
        <p><strong>Komentaras kurjeriui:</strong> @instruction.CommentForCourier</p>
        <a href="@Url.Action("DeliveryForm", "User", new { id = instruction.ID })" class="btn btn-secondary">Keisti instrukcijas</a>
    </div>
}
